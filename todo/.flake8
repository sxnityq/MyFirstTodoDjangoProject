[flake8]
exclude=migrations,__pycache__,env,TodoVenv/*,media,todo/settings.py
ignore=D101,D102,D103,D100,D104,D106,D105
max-line-length=100

isort = "*"
black = "*"
flake8-broken-line = { version="*", python="<4.0" }
flake8-string-format = "*"
pep8-naming = "*"
flake8-import-order="*"
flake8-bugbear = "*"
flake8-comprehensions = "*"
flake8-debugger = "*"
flake8-docstrings = "*"
flake8-eradicate = { version="*", python="<4.0" }
flake8-print = "*"